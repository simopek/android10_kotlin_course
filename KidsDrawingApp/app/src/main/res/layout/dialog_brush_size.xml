<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/smallBrushSelector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:contentDescription="small brush size"
        android:src="@drawable/small_brush"
        app:layout_constraintEnd_toEndOf="@+id/mediumBrushSelector"
        app:layout_constraintTop_toTopOf="parent"></ImageButton>

    <ImageButton
        android:id="@+id/mediumBrushSelector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:contentDescription="medium brush size"
        android:src="@drawable/medium_brush"
        app:layout_constraintStart_toStartOf="@+id/largeBrushSelector"
        app:layout_constraintTop_toBottomOf="@+id/smallBrushSelector"></ImageButton>

    <ImageButton
        android:id="@+id/largeBrushSelector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="large brush size"
        android:src="@drawable/large_brush"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mediumBrushSelector"></ImageButton>

</androidx.constraintlayout.widget.ConstraintLayout>