<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.quizapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".QuizQuestionsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CustomThemeWithActionBar"
            android:windowSoftInputMode="adjustResize">
            ></activity>
        <!--
        With "portrait" screen orientation we want the activity
        to be "set" in "vertical".

        "windowSoftInputMode" defines how the software keyboard
        affect the activity's window.
        -->
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CustomTheme"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>